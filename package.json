{
  "name": "nestjs-clean-boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "Stefano Giurgiano",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build $1",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:dev": "nest start $1 -w",
    "start:debug": "npm run start:dev $1 -- --debug 0.0.0.0:9229",
    "start:prod": "sh() { node dist/apps/$1/main; };sh",
    "lint:fix": "npm run lint:check -- --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk=0.0.0.0:9230 -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "sh(){ jest --config ./apps/$1/test/jest-e2e.json; };sh",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.2",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.2.2",
    "@nestjs/platform-fastify": "^10.3.7",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nestjs/cli": "^10.1.16",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.2",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.80",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.3",
    "@types/supertest": "^2.0.12",
    "husky": "^9.0.11",
    "jest": "^29.6.3",
    "rimraf": "^5.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "swc-loader": "^0.2.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s?$": [
        "@swc/jest"
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      ".*\\.e2e-spec\\.ts$",
      "exports.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@lib/health/(.*)": "<rootDir>/libs/health/src/$1",
      "@apps/app-one/(.*)": "<rootDir>/apps/app-one/src/$1"
    },
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  }
}
